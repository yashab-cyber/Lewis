# Environment Variables for LEWIS
# Copy this file to .env and customize for your environment

# Basic Configuration
LEWIS_ENV=development
LEWIS_DEBUG=true
LEWIS_HOST=localhost
LEWIS_PORT=8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=lewis_db
DATABASE_URL=sqlite:///data/database/lewis.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_TOKEN=your-huggingface-token-here
MODEL_CACHE_DIR=cache/model_cache

# Voice Assistant
VOICE_ENABLED=true
VOICE_LANGUAGE=en-US
WAKE_WORD=lewis

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/lewis.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# External Services
THREAT_INTEL_API_KEY=your-threat-intel-api-key
CVE_API_KEY=your-cve-api-key
SHODAN_API_KEY=your-shodan-api-key

# Email Configuration (for notifications)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=lewis@yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_ENCRYPTION=true
BACKUP_RETENTION_DAYS=30

# Performance
MAX_WORKERS=4
CACHE_SIZE=1000
REQUEST_TIMEOUT=30

# Development
RELOAD_ON_CHANGE=true
PROFILING_ENABLED=false
TESTING_MODE=false
