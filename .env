# Environment Variables for LEWIS
# Development Configuration

# Basic Configuration
LEWIS_ENV=development
LEWIS_DEBUG=true
LEWIS_HOST=localhost
LEWIS_PORT=8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=lewis_db
DATABASE_URL=sqlite:///data/database/lewis.db

# Security (Change these in production!)
SECRET_KEY=lewis-dev-secret-key-change-in-production-2025
JWT_SECRET=lewis-jwt-secret-development-only
ENCRYPTION_KEY=lewis-encryption-key-development-use

# AI/ML Configuration
OPENAI_API_KEY=
HUGGINGFACE_TOKEN=
MODEL_CACHE_DIR=cache/model_cache

# Voice Assistant
VOICE_ENABLED=true
VOICE_LANGUAGE=en-US
WAKE_WORD=lewis

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/lewis.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# External Services (Add your API keys)
THREAT_INTEL_API_KEY=
CVE_API_KEY=
SHODAN_API_KEY=

# Email Configuration (for notifications)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=lewis@localhost

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_ENCRYPTION=true
BACKUP_RETENTION_DAYS=30

# Performance
MAX_WORKERS=4
CACHE_SIZE=1000
REQUEST_TIMEOUT=30

# Development
RELOAD_ON_CHANGE=true
PROFILING_ENABLED=false
TESTING_MODE=false
